{
    "_comment": "Docker Base container for {{image}}",
    "builders": [{
        "type": "docker",
        "image": "{{image}}",
        "commit": "true",
        "pull": "true"
    }],
    "provisioners":[{
{% if sudo and sudo != "None" %}
        "type": "shell",
        "script": "{{script}}"
    },{
{% endif %}
        "type": "shell",
        "inline": [
            {% if os == "ubuntu" %}"apt-get update -y"{% else %}"yum update -y{{package}}"{% endif %},
            {% for package in default_packages %}{% if loop.first %}{% if os == "ubuntu" %}"apt-get install -y{% else %}"yum install -y{% endif %}{% endif %} {{package}}{% if loop.last %}"{% endif %}{% endfor %}
        ]
    },{
        "type": "file",
        "source": "{{ salt_grains_file }}",
        "destination": "/etc/salt/grains"
    },{
        "type": "salt-masterless",
        "local_state_tree": "{{ salt_state_tree }}",
        "local_pillar_roots": "{{ salt_pillar_root }}",
        "no_exit_on_failure": false,
        "log_level": "debug",
        "skip_bootstrap": true
{% if extra_script and extra_script != "None" %}
    },{
        "type": "shell",
        "script": "{{ extra_script }}",
        "execute_command": "sudo -E sh '{% raw %}{{ .Path }}{% endraw %}' {{ extra_script_args }}"
{% endif %}
{% if tagname == 'latest' or tagname == 'master' or role == 'base' %}
    },{
        "type": "shell",
        "inline": [
            "yum remove -y salt* zeromq dmidecode",
            "yum remove -y python-backports python-backports.ssl_match_hostname python-backports_abc python-M2Crypto python-certifi python-enum34 python-futures python-cffi python-cryptography python-idna python-pycparser python-paramiko python-singledispatch python-pycrypto python-tornado python-websocket-client python-typing python-pyzmq",
            "rm -rf /srv/salt /srv/pillar /srv/reactor /var/cache/salt",
            "yum clean all"
        ]
{% endif %}
    }],
    "post-processors": [[
        {
            "type": "docker-tag",
            "repository": "{{prefix}}",
            "tag": "{{tag}}"
        }{% if docker_push %},"docker-push" {% endif %}
    ]]
}
